<h2>Your Dashboard</h2>
{{#if posts.length}}
<div>
    
    {{#each posts as |post|}}
    <div class="row mb-4">
        <div class="col-md-5">
            <h2>
                <a href="/post/{{id}}">{{title}}</a>
            </h2>
        </div>
    </div>
    {{/each}}
</div>
{{/if}}

<button type="button" class="btn btn-primary" href='#'>New Post</button>