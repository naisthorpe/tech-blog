<div class="row">
  <div class="col-md-6">
    <h2>Login</h2>

    <form class="form login-form">
      <div class="form-group">
        <label for="username-login">Username:</label>
        <input class="form-input" type="text" id="username-login" />
      </div>
      <div class="form-group">
        <label for="password-login">Password:</label>
        <input class="form-input" type="password" id="password-login" />
      </div>
      <div class="container">
        <div class="row">
          <div class="btn-toolbar mx-auto">
            <button id="login" class="btn btn-primary mr-2" type="submit">Login</button>
            <a href="/signup">Sign Up</button>
          </div>
        </div>
      </div>
    </form>
  </div>

</div>

<script src="./js/login.js"></script>